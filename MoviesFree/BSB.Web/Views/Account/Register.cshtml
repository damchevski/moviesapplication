@model BSB.Data.Dto.UserRegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Register</div>
                <div class="card-body">
                    @Html.ValidationSummary()
                    <form asp-action="Register" asp-controller="Account" method="post">

                        <div class="form-group row">
                            <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                            <br>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label"></label>
                            <br>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "PhoneNumber", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.FirstName" class="col-lg-3 control-label"></label>
                            <br>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Fist Name", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.LastName" class="col-lg-3 control-label"></label>
                            <br>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                            <br>
                            <div class="col-lg-9">
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.ConfirmPassword" class="col-lg-3 control-label"></label>
                            <br>
                            <div class="col-lg-9">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>


                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">Register</button>
                            <a asp-action="Login" asp-controller="account">Have Account ? Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
