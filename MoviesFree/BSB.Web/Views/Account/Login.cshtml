@model BSB.Data.Dto.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style_login.css">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
</head>
<body>

    <div class="container">
            <div class="img">
                <img src="~/Images/popcorn_image.png" />
            </div>
            <div class="login-container">
                @Html.ValidationSummary()
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="input-div" one>
                        <div class="i">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="forma">
                            
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter your Email", @class = "formicka" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                    <div class="input-div" two>
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter your Password", @class = "formicka" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <a asp-action="Register" asp-controller="account">&nbsp; &nbsp; &nbsp; Don't have an account? Register</a>
                    <br /><br />
                    <button type="submit" class="login" style="background-color: #181818; color:white; border:none; min-width:190px; border-radius:20px; width:auto">Login</button>
                </form>
            </div>
        </div>

</body>