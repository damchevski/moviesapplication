@model BSB.Data.Entity.Movie

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background: linear-gradient(to bottom, #8a5a39, #ffffffd9);
    }
</style>

<div style="width: 30rem; margin: 0 auto; padding: 20px;">
    <hr />
    <div class="card border-danger mb-3">
      <div class="card-header">
          <div class="row justify-content-between align-items-center">
                <h1 class="col-sm-6 font-weight-bold">@Html.DisplayFor(model => model.Name)</h1>
                <img class="col-sm-10" style="max-width:100px" src="@Html.DisplayFor(model => model.Image)"/>
          </div>
      </div>
      <div class="card-body text-danger">
        <h5 class="card-title">Are you sure you want to delete this movie ?</h5>
         <form asp-action="Delete" class="justify-content-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a class="btn" style="background-color: #ECAE8C; color: white" asp-action="Index">Back to List</a>
         </form>
     </div>

   
</div>
