@using Microsoft.Extensions.Options
@model BSB.Data.Dto.FavouritesDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Movie Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Movies.Count == 0)
                {
                    <tr>
                        <td colspan="5">No fav movies</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Movies.Count; i++)
                    {
                        var item = Model.Movies[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.Movie.Name</td>
                            <td>$@item.Movie.Director</td>
                            <td><a asp-controller="FavMovies" asp-action="DeleteFromFavMovies" asp-route-id="@item.MovieId" class="btn btn-danger">Delete From Favourites</a></td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

</div>